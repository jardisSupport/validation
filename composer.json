{
  "name": "jardissupport/validation",
  "description": "A flexible validation package for Domain-Driven Design with nested aggregates",
  "type": "library",
  "license": "PolyForm-Noncommercial-1.0.0",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Headgent Development",
      "email": "jardisDev@headgent.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "jardisport/validation": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0.4",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "autoload": {
    "psr-4": {
      "JardisSupport\\Validation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JardisSupport\\Validation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo '#!/usr/bin/env bash' > .git/hooks/pre-commit",
      "echo 'bash ./support/pre-commit-hook.sh' >> .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  },
  "homepage": "https://github.com/jardisSupport/validation",
  "support": {
    "issues": "https://github.com/jardisSupport/validation/issues",
    "email": "jardisDev@headgent.com"
  },
  "keywords": ["validation", "domain driven design", "jardis", "Headgent"]
}
